<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.company.fyf.widget.TitleBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        title="积分管理" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="168.67dp"
        android:background="@color/theme_blue"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/space_px_60"
            android:layout_gravity="center_vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp" 
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_p04_iv_user"
                android:drawablePadding="@dimen/space_px_40"
                android:text="张三"/>
             <TextView
                 android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp" 
                android:layout_marginTop="@dimen/space_px_60"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_p04_iv_iphone"
                android:drawablePadding="@dimen/space_px_40"
                android:text="1388888888888"/>
        </LinearLayout>
        
        
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/space_px_60"
            android:layout_gravity="center_vertical|right"
            android:gravity="center" 
            android:background="@drawable/bg_p04_ll_points">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp" 
                android:text="当前积分"/>
             <TextView
                 android:id="@+id/credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp" 
                android:layout_marginTop="3dp"
                android:text="8888"/>
        </LinearLayout>
    </FrameLayout>

    <View
        style="@style/item_click_cutline_full"
        android:layout_marginTop="@dimen/space_px_60" />

    <LinearLayout
        android:id="@+id/noinfoMypoints"
        style="@style/item_click_linearlayout" >

        <ImageView
            style="@style/item_click_icon"
            android:src="@drawable/ic_p04_iv_jfff" />

        <TextView
            style="@style/item_click_textview"
            android:text="积分发放" />

        <TextView
            android:id="@+id/jfff_point_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_px_40"
            android:background="@drawable/bg_p04_iv_jfff_select"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/jfff_point_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_px_40"
            android:background="@drawable/bg_p04_iv_jfff_select"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/jfff_point_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_px_40"
            android:background="@drawable/bg_p04_iv_jfff_select"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white" />
    </LinearLayout>

    <View
        style="@style/item_click_cutline_right"
        android:layout_marginLeft="57.33dp" />

    <LinearLayout
        android:id="@+id/ll_exchange"
        style="@style/item_click_linearlayout" >

        <ImageView
            style="@style/item_click_icon"
            android:src="@drawable/ic_p04_iv_jfdh" />

        <TextView
            style="@style/item_click_textview"
            android:text="积分兑换" />

        <ImageView style="@style/item_click_arrow" />
    </LinearLayout>

    <View style="@style/item_click_cutline_full" />

</LinearLayout>