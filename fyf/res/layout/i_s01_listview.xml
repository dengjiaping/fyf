<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="19dp"
    android:paddingRight="19dp"
    android:paddingTop="19dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/catname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="最新动态"
            android:textColor="@drawable/co_comm_simle_02"
            android:textSize="@dimen/txtsize_px_50" />

        <TextView
            android:id="@+id/updatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2011-01-01"
            android:textSize="@dimen/txtsize_px_30" />
    </LinearLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="最新动态内容最新动态内容最新动态内容最新动态内容最新动态内容最新动态内容最新动态内容最新动态内容" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_px_2"
        android:layout_marginTop="12dp"
        android:background="@color/theme_gray" />

</LinearLayout>