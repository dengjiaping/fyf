<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.company.fyf.widget.TitleBar
        title="分类情况添加"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:text="北京市朝阳区某某街道某某办事处\n某某办事处某某办事处某某办事处某某办"
                android:textColor="#202020"
                android:textSize="@dimen/txtsize_px_40" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_px_40"
                android:background="@drawable/bg_shape_input_simple_01"
                android:hint="小区名称位置"
                android:padding="@dimen/space_px_40"
                android:textColor="#cecece"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_px_40"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/kilo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_shape_input_simple_01"
                    android:hint="输入公斤数量"
                    android:minWidth="100dp"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:padding="@dimen/space_px_40"
                    android:textColor="#cecece"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="公斤"
                    android:textColor="#202020"
                    android:textSize="@dimen/txtsize_px_40" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_px_60"
                android:text="任务完成量"
                android:textColor="#8b8b8b"
                android:textSize="12sp" />

            <RadioGroup
                android:id="@+id/complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_px_40"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/complete_01"
                    android:layout_width="60dp"
                    android:layout_height="33.33dp"
                    android:background="@drawable/bg_btn_simple_05"
                    android:button="@null"
                    android:gravity="center"
                    android:text="1/4"
                    android:textColor="@drawable/co_comm_simle_white_797979"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <RadioButton
                    android:id="@+id/complete_02"
                    android:layout_width="60dp"
                    android:layout_height="33.33dp"
                    android:background="@drawable/bg_btn_simple_05"
                    android:button="@null"
                    android:gravity="center"
                    android:text="2/4"
                    android:textColor="@drawable/co_comm_simle_white_797979"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <RadioButton
                    android:id="@+id/complete_03"
                    android:layout_width="60dp"
                    android:layout_height="33.33dp"
                    android:background="@drawable/bg_btn_simple_05"
                    android:button="@null"
                    android:gravity="center"
                    android:text="3/4"
                    android:textColor="@drawable/co_comm_simle_white_797979"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <RadioButton
                    android:id="@+id/complete_04"
                    android:layout_width="60dp"
                    android:layout_height="33.33dp"
                    android:background="@drawable/bg_btn_simple_05"
                    android:button="@null"
                    android:gravity="center"
                    android:text="4/4"
                    android:textColor="@drawable/co_comm_simle_white_797979"
                    android:textSize="12sp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_px_60"
                android:text="上传添加附件"
                android:textColor="#8b8b8b"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/pic"
                android:layout_width="73.33dp"
                android:layout_height="73.33dp"
                android:layout_marginTop="@dimen/space_px_40"
                android:src="@drawable/ic_comm_pic_add" />

            <EditText
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_px_40"
                android:background="@drawable/bg_shape_input_simple_01"
                android:gravity="top|left"
                android:hint="请输入您的意见"
                android:minHeight="143.33dp"
                android:padding="@dimen/space_px_40"
                android:textColor="#cecece"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/submit"
                android:layout_width="276.67dp"
                android:layout_height="41.33dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/space_px_80"
                android:layout_marginTop="@dimen/space_px_80"
                android:background="@drawable/bg_btn_simple_06"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/txtsize_px_54" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>